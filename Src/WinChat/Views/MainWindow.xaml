<Window x:Class="WinChat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinChat"
        xmlns:vms="clr-namespace:WinChat.ViewModels"
        mc:Ignorable="d"
        Title="WinChat" 
        MinHeight="300" MinWidth="700"
        Height="1000" Width="800"
        DataContext="{x:Static local:ViewModelLocator.Main}"
        Background="{Binding ColorSettings.BackgroundColor}"
        Foreground="{Binding ColorSettings.ForegroundColor}"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl ItemsSource="{Binding ChatMessages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                            CornerRadius="10"
                            Margin="5"
                            MaxWidth="500">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{Binding Path=DataContext.ColorSettings.AssistantChatColor, RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <Setter Property="HorizontalAlignment" Value="Left"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Role}" Value="User">
                                            <Setter Property="Background" Value="{Binding Path=DataContext.ColorSettings.UserChatColor, RelativeSource={RelativeSource AncestorType=Window}}" />
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBox Text="{Binding Content}"
                               TextWrapping="Wrap"
                               Foreground="{Binding Path=DataContext.ColorSettings.ForegroundColor, RelativeSource={RelativeSource AncestorType=Window}}"
                               FontSize="14" 
                               IsReadOnly="True"
                               Background="Transparent"
                               BorderBrush="Transparent"
                              
                               HorizontalContentAlignment="Left">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="ChatTextBox" Text="{Binding UserMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0" Padding="10"
                     FontSize="14" Background="GhostWhite" KeyDown="TextBox_KeyDown" />
            <Button Grid.Column="1" Command="{Binding SendChatCommand}" Content="Send message" Padding="10"/>
        </Grid>
    </Grid>
</Window>
